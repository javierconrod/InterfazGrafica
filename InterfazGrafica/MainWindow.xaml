<Window x:Class="InterfazGrafica.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InterfazGrafica"
        mc:Ignorable="d"
        Title="Ventanita" Height="720" Width="1280">
    <!--Esto es un comentario-->
    <StackPanel>
        <!--Texto plano-->
        <!--
            Orden de margenes:
            Left, Top, Right, Bottom
        -->
        <TextBlock TextAlignment="Center" Margin="20, 15, 20, 0"> Correo:</TextBlock>
        <!--Caja para introducir texto-->
        <TextBox TextAlignment="Center" Margin="20, 15, 20, 0"></TextBox>
        <TextBlock TextAlignment="Center" Margin="20, 15, 20, 0">Contraseña:</TextBlock>
        <TextBox TextAlignment="Center" Margin="20, 15, 20, 0"></TextBox>
        <Button Margin="200, 15, 200, 0">Iniciar Sesión</Button>
    </StackPanel>
</Window>
